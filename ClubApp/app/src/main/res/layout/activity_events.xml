<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_events"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="club.polyappdev.clubapp.AllViewable.events">

    <ImageView
        android:layout_width="match_parent"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/photos"
        android:contentDescription="Photos"
        android:layout_below="@+id/titleView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="100dp"
        android:background="@android:color/holo_blue_bright" />

    <TextView
        android:text="Location"
        android:id="@+id/location"
        tools:text="Location"
        android:layout_height="50dp"
        android:layout_below="@+id/photos"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="150dp" />

    <CheckBox
        android:text="notifyMe"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/notifyBox"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/keyword"
        android:layout_toRightOf="@+id/description"
        android:layout_toEndOf="@+id/description" />

    <TextView
        android:text="TextView"
        android:id="@+id/description"
        tools:text="Description"
        android:layout_height="150dp"
        android:layout_width="250dp"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/map"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/map"
        android:layout_height="100dp"
        android:layout_width="200dp"
        android:layout_below="@+id/photos"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/keyword"
        android:text="keyword"
        android:layout_height="30dp"
        android:layout_width="250dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Time"
        android:layout_height="50dp"
        android:id="@+id/time"
        android:layout_width="150dp"
        android:layout_below="@+id/location"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        tools:text="Tilte"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
